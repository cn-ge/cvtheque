<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Edition HTML</title>
        <link rel="stylesheet" href="/bootstrap-4.3.1-dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="/font-awesome-4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/css/html_pdf.css">
    </head>
    <body>
        <div class="header">
            <div class="entreprise-logo">
                <div><img src="/assets/images/logo-{{ entreprise_name }}.png" alt="Logo {{ entreprise_name }}" /></div>
                <div class="btn-print"><button class="noprint btn btn-warning" onclick="document.title='{{ candidat.prenom }}-{{ candidat.firstLetter }}-{{ candidat.id }}'; window.print();return false;">Imprimer au format PDF</button></div>
            </div>
            <div class="entreprise-coordonnees">
                <div class="entreprise-name">
                    <div><a href="{{ entreprise_name }}" target="_blank">{{ entreprise_name }}</a></div>
                </div>
                <div class="entreprise-adresse">
                    <div>{{ entreprise_address1 }}</div>
                    <div>{{ entreprise_address2 }}</div>
                    <div>{{ entreprise_address3 }}</div>
                    <div>{{ entreprise_tel }}</div>
                    <div>{{ entreprise_website }}</div>
                </div>
                <div class="entreprise-commercial">
                    <div><i class="fa fa-user"></i> {{ entreprise_commercial }}</div>
                    <div><a href="tel:{{ entreprise_commercial_tel }}"><i class="fa fa-phone"></i> {{ entreprise_commercial_tel }}</a></div>
                    <div><a href="mailto:{{ entreprise_commercial_email }}"><i class="fa fa-envelope"></i> {{ entreprise_commercial_email }}</a></div>
                </div>
            </div>
        </div>
        <div class="content">

            <div class="candidat">
                <div class="candidat-name">{{ candidat.prenom }} {{ candidat.firstLetter }}</div>
                <div class="candidat-resume">{{ candidat.statut }}</div>
                <div class="candidat-resume">{{ candidat.posteRecherche }}</div>
                <div class="candidat-resume">{{ candidat.age }} ans, xx ans d'expérience</p></div>
            </div>

            <div>
                <div class="categorie">Formations / Diplômes</div>
                <table class="formation" style="width: 100%;">
                    <tr class="formation-border">
                        <th class="formation-border formation-header">Années</th>
                        <th class="formation-border formation-header">Formations / Diplômes</th>
                    </tr>
                    {% for formation in candidat.formations %}
                    <tr class="formation-border">
                        <td class="formation-border">
                            <p class="formation-annee">{{ formation.annee }}</p>
                        </td>
                        <td class="formation-border">
                            <div class="formation-label">
                                <div class="formation-diplome">{{ formation.diplome }} - {{ formation.formattedNiveau }}</div>
                                <div class="formation-alternance">{% if formation.alternance %} Alternance {% endif %}</div>
                            </div>
                            <div class="formation-ecole">{{ formation.ecole }} {% if formation.ville %} ({{formation.ville}}) {% endif %}</div>
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div>

            <div class="competences">
                <div class="categorie">Compétences / Techniques</div>
            </div>

            <div class="experiences-pro">
                <div class="categorie">Expériences Détaillées</div>
            </div>

            <div class="experiences-perso">
                <div class="categorie">Projets personnels</div>
            </div>

            <div class="loisirs">
                <div class="categorie">Centre d'Intérêts</div>
            </div>
        </div>
        <div class="footer">
        </div>

    </body>
</html>